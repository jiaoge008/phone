<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phonecalldemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/dianhua1"
        android:label="@string/app_name">
        <activity
            android:name="com.example.xianjiao.phone.PhoneCallDemo"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.xianjiao.phone.AddNewPhone"
            android:label="AddNewPhone" >
            <intent-filter>
                <action android:name="android.intent.action.addNewPhone" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.xianjiao.phone.DeletePhone"
            android:label="DeletePhone" >
            <intent-filter>
                <action android:name="android.intent.action.deletePhone" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
    <!-- 添加拨出电话的权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE">
    </uses-permission>
</manifest>